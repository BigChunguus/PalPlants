<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo del LinearLayout -->
            <corners android:radius="30dp" /> <!-- Radio de las esquinas -->
            <padding
                android:bottom="3dp"
                android:left="0dp"
                android:right="3dp"
                android:top="0dp" /> <!-- Espacio para la sombra -->
            <size android:height="1dp" /> <!-- Altura de la sombra -->
            <gradient
                android:startColor="@android:color/transparent"
                android:centerColor="@android:color/transparent"
                android:endColor="#802e2e2e"
                android:endX="10"
                android:endY="10"
                android:angle="315" /> <!-- Gradiente de la sombra -->
        </shape>
    </item>

    <!-- Padding para desplazar la sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="2dp" android:color="@color/cyan" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</layer-list>

