<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo del LinearLayout -->
            <corners android:radius="20dp" /> <!-- Radio de las esquinas -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" /> <!-- Espacio para la sombra -->
            <size android:height="1dp" /> <!-- Altura de la sombra -->
            <gradient
                android:startColor="@android:color/transparent"
                android:centerColor="@android:color/transparent"
                android:endColor="#2e2e2e"
                android:endX="10"
                android:endY="10"
                android:angle="315" /> <!-- Gradiente de la sombra -->
        </shape>
    </item>

    <item android:left="-2dp" android:right="0.25dp" android:top="-2dp" android:bottom="0.25dp">
        <shape
            android:shape="rectangle">

            <solid android:color="@color/customBackground" />
            <stroke
                android:color="@color/darkcyan"
                android:width="1dp" />
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
</layer-list>