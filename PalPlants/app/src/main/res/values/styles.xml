<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ConfiguraciÃ³n adicional -->
    </style>

    <style name="tabCustomStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/cyan</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.App.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/darkcyan</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColor">@color/darkcyan</item>
        <item name="android:color">@color/cyan</item>
        <item name="strokeColor">@color/cyan</item>
        <item name="startIconTint">@color/cyan</item>
        <item name="android:textColorHint">@color/cyan</item>
        <item name="endIconTint">@color/cyan</item>

    </style>

    <!-- Dark Theme -->
    <style name="Theme.App.Dark.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkcyan</item>
        <item name="colorPrimaryDark">@color/cyan</item>
        <item name="colorAccent">@color/darkcyan</item>
        <item name="android:background">@color/darkBack</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="startIconTint">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="TimePickerDialogTheme.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:headerBackground">@color/darkcyan</item>
        <item name="colorAccent">@color/darkcyan</item>
    </style>
    <style name="TimePickerDialogTheme.Dark" parent="ThemeOverlay.AppCompat.Dialog">
    </style>




</resources>
