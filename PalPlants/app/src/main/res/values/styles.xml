        <item name="endIconTint">@color/cyan</item>
        <item name="customProgressStarTint">@color/cyan</item>
        <item name="customProgressStarBackgroundTint">@color/grey</item>
        <item name="customBackgroundCardview">@drawable/custom_background_cardview</item>
        <item name="backgroundGradientLayout">@drawable/background_gradient</item>
        <item name="backgroundRecyclerViewCard">@color/white</item>
        <item name="textViewTextColor">@color/colorTextoClaro</item>
        <item name="userNameTextColor">@color/darkblue</item>
