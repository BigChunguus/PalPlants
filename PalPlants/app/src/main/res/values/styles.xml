        <item name="customProgressStarBackgroundTint">@color/white</item>
        <item name="customBackgroundCardview">@drawable/custom_background_cardview_night</item>
        <item name="backgroundGradientLayout">@drawable/background_gradient_night</item>
        <item name="backgroundRecyclerViewCard">@color/customBackground</item>
        <item name="textViewTextColor">@color/colorTextoOscuro</item>
        <item name="userNameTextColor">@color/blue</item>
